<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OVXExample" 
    android:background="@drawable/light">

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/home" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home"
        android:layout_alignBottom="@+id/home"
        android:layout_alignParentRight="true"
        android:text="@string/back" />

    <TextView
        android:id="@+id/record2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/record1"
        android:layout_below="@+id/view1"
        android:gravity="center"
        android:text="Record-2" />

    <Button
        android:id="@+id/view2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/delete1"
        android:text="View" />

    <Button
        android:id="@+id/delete2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/VideoView1"
        android:layout_alignLeft="@+id/delete1"
        android:text="Delete" />

    <TextView
        android:id="@+id/record1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/home"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Record-1" />

    <VideoView
        android:id="@+id/VideoView1"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_alignLeft="@+id/record2"
        android:layout_below="@+id/view2"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/VideoView1"
        android:gravity="center"
        android:text="Message:" />

    <Button
        android:id="@+id/delete1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/record2"
        android:layout_alignRight="@+id/back"
        android:layout_marginRight="21dp"
        android:text="Delete" />

    <Button
        android:id="@+id/view1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/record1"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@+id/delete2"
        android:text="View" />

</RelativeLayout>